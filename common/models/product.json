{
  "name": "Product",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {}
  },
  "properties": {
    "Code": {
      "type": "string",
      "id": true,
      "required": true
    },
    "SKU": {
      "type": "string",
      "required": true
    },
    "Name": {
      "type": "string",
      "required": true
    },
    "Description": {
      "type": "string",
      "required": true
    },
    "Price": {
      "type": "number",
      "required": true
    },
    "DP": {
      "type": "number",
      "required": true
    },
    "Specification": {
      "type": "string",
      "required": true
    },
    "Image":{
      "type" : "string",
      "required":true
    }
  },
  "validations": [],
  "relations": {
    "brand": {
      "type": "belongsTo",
      "model": "Brand",
      "foreignKey": "BrandCode"
    },
    "OrderDetail": {
      "type": "hasMany",
      "model": "OrderDetail",
      "foreignKey": "ProductCode"
    },
    "ProductDealer": {
      "type": "hasMany",
      "model": "ProductDealer",
      "foreignKey": "ProductCode"
    }
  },
  "acls": [],
  "methods": {}
}
